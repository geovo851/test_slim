<% provide(:title, 'Carts') %>

<div class="container-fluid"> 
  <div class="row">
    <div class="page-header">
      <h1>Carts</h1>
    </div>

    <div class="row">
      <div class="col-sm-10 col-md-8">

        <% if @carts.empty? %>
          <b>No carts in store.</b>
        <% else %>

          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
              <thead>
               <tr class="warning">
                  <th>ID</th>
                  <th>User</th>
                  <th>Sum</th>
                </tr>
              </thead>
              <tbody id="carts">
                <%= render partial: "cart", :collection => @carts, :as => :cart %>
              </tbody>
            </table>
          </div>
          <div id="paginator", class="paginate-centre">
            <%= paginate @carts, :remote => true %>
          </div>
        <% end %>
      </div>
    </div>

    <p>
      <%= button_to 'Back', admins_path, method: :get, class: "btn btn-default" %>
    </p>
  </div>
</div>