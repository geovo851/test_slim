<% provide(:title, 'Orders') %>

<div class="container-fluid"> 
  <div class="row">
    <div class="page-header">
      <h1>Orders</h1>
    </div>

    <div class="row">
      <div class="col-sm-10 col-md-8">
        <p>
          <%= button_to new_order_path, method: :get, class: 'btn btn-primary' do %>
            <span class="glyphicon glyphicon-plus"></span>
            Add order
          <% end %>
        </p>
        
        <% if @orders.empty? %>
          <b>No orders in store.</b>
        <% else %>

          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
              <thead>
               <tr class="warning">
                  <th>ID</th>
                  <th>Status</th>
                  <th>User</th>
                  <th>Payment</th>
                  <th>Delivary adress</th>
                  <th>Sum</th>
                  <th colspan="2"></th>
                </tr>
              </thead>
              <tbody id="orders">
                <%= render partial: "order", :collection => @orders, :as => :order %>
              </tbody>
            </table>
          </div>
          <div id="paginator", class="paginate-centre">
            <%= paginate @orders, :remote => true %>
          </div>
        <% end %>
      </div>
    </div>

    <p>
      <%= button_to 'Back', admins_path, method: :get, class: "btn btn-default" %>
    </p>
  </div>
</div>